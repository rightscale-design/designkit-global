{
  "name": "designkit-global",
  "version": "1.0.0",
  "description": "Sass module for a global CSS reset based on Normalize.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rightscale-design/designkit-global.git"
  },
  "author": {
    "name": "Jason Melgoza"
  },
  "license": "MIT",
  "keywords": [
    "sass",
    "scss",
    "css",
    "postcss",
    "design"
  ],
  "bugs": {
    "url": "https://github.com/rightscale-design/designkit-global/issues"
  },
  "homepage": "https://github.com/rightscale-design/designkit-global#readme",
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "bourbon": "^4.2.7",
    "clean-css": "^3.4.19",
    "http-server": "^0.9.0",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.0",
    "npm-run-all": "^2.3.0",
    "postcss-cli": "^2.5.2"
  },
  "scripts": {
    "start": "npm run build:serve",
    "serve": "http-server -p 9000 -o",
    "watch": "nodemon -e scss -x 'npm run build:all'",
    "build:scss": "./bin/scss",
    "build:prefix": "postcss -u autoprefixer -b 'last 2 versions' < src/css/_designkit-global.css > dist/designkit-global.css",
    "build:minify": "cleancss -o dist/designkit-global.min.css dist/designkit-global.css",
    "build:all": "npm run build:scss && npm run build:prefix && npm run build:minify",
    "build:serve": "run-p watch serve"
  }
}
